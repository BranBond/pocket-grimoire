{% embed '../includes/details.twig' with {
    summary: 'Grimoire',
    id: 'grimoire'
} %}
    {% block body %}
    <div class="pad-wrapper">
        <div class="pad pad--growable js--pad"></div>
        <!-- https://fontawesome.com/v5.15/icons/arrows-alt-v?style=solid -->
        <svg aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" class="pad-wrapper__icon"><path fill="currentColor" d="M214.059 377.941H168V134.059h46.059c21.382 0 32.09-25.851 16.971-40.971L144.971 7.029c-9.373-9.373-24.568-9.373-33.941 0L24.971 93.088c-15.119 15.119-4.411 40.971 16.971 40.971H88v243.882H41.941c-21.382 0-32.09 25.851-16.971 40.971l86.059 86.059c9.373 9.373 24.568 9.373 33.941 0l86.059-86.059c15.12-15.119 4.412-40.971-16.97-40.971z" class=""></path></svg>
    </div>

    <div class="pad pad--bluffs">
        <h3 class="pad__title">Demon Bluffs</h3>
        <div style="display: flex; flex-direction: row; justify-content: space-between;">
            {% for i in 1..3 %}
                <button type="button" id="bluff-{{ i }}" class="token token--bluff js--character-list--bluff" data-token="character" data-bluff-dialog="#bluff-show"></button>
            {% endfor %}
        </div>
    </div>

    <ul class="button-list mt-4">
        <li><button type="button" class="button" id="add-token" data-dialog="#character-list">Add token</button></li>
        <li><button type="button" class="button" id="add-reminder" data-dialog="#reminder-list">Add reminder</button></li>
        <li><button type="button" class="button" id="reset-height">Reset pad height</button></li>
        {# NOTE: this should be a toggle switch, if anything #}
        {# <li><button type="button" class="button" id="toggle-night" disabled>Toggle night order</button></li> #}
        <li><button type="button" class="button button--warning" id="clear-grimoire" data-confirm="Are you sure you want to clear all the tokens?">Clear Grimoire</button></li>
    </ul>

    <div class="mt-4">
        {{ forms.toggle({
            name: 'show-night-order',
            id: 'show-night-order',
            checked: true
        }) }}
        <label for="show-night-order">Show night order</label>
    </div>

    {% endblock %}
{% endembed %}

{% embed '../includes/dialog.twig' with {
    id: 'character-list',
    background: 'blur',
    title: 'Select Character'
} %}
    {% block body %}
    <ul id="character-list__list" class="button-list character-list"></ul>
    {% endblock %}
{% endembed %}

<template id="character-list-template">
    <li class="js--character-list--item">
        <button type="button" class="no-btn w-full js--character-list--button">
            <span class="character-list__token js--character-list--token"></span>
        </button>
    </li>
</template>

{% embed '../includes/dialog.twig' with {
    id: 'reminder-list',
    background: 'blur',
    title: 'Select Reminder'
} %}
    {% block body %}
    <ul id="reminder-list__list" class="button-list button-list--reminder"></ul>
    {% endblock %}
{% endembed %}

<template id="token-template">
    <button type="button" class="token token--movable js--token--wrapper"></button>
</template>

<template id="character-template">
    <span class="character js--character js--character--leaves">
        <span class="character__image">
            <img src="" alt="" class="character__icon js--character--image" loading="lazy">
        </span>
        <svg viewBox="0 0 150 150" class="character__text">
            <path d="M 13 75 C 13 160, 138 160, 138 75" id="curve" fill="transparent"></path>
            <text width="150" x="66.6%" text-anchor="middle" class="character__name">
                <textPath xlink:href="#curve" style="fill: currentColor;" class="js--character--name"></textPath>
            </text>
        </svg>
        <span class="character__shroud"></span>
    </span>
</template>

<template id="reminder-list-template">
    <li>
        <button type="button" class="no-btn js--reminder-list--button"></button>
    </li>
</template>

<template id="reminder-template">
    <span class="reminder">
        <span class="reminder__image">
            <img src="" alt="" class="reminder__icon js--reminder--image" loading="lazy">
        </span>
        <svg viewBox="0 0 150 150" class="reminder__text">
            <path d="M 13 75 C 13 160, 138 160, 138 75" id="curve" fill="transparent"></path>
            <text width="150" x="66.6%" text-anchor="middle" class="reminder__name">
                <textPath xlink:href="#curve" style="fill: currentColor;" class="js--reminder--text"></textPath>
            </text>
        </svg>
    </span>
</template>

{% embed '../includes/dialog.twig' with {
    id: 'character-show',
    background: 'hide'
} %}
    {% block title %}<span id="character-show-name">Token</span>{% endblock %}
    {% block body %}
    <div id="character-show-token" class="character-show__token"></div>
    <p id="character-show-ability" class="character-show__ability"></p>
    <ul class="button-list button-list--tokens">
        <li><button type="button" class="no-btn button" id="character-shroud-toggle">Shroud</button></li>
        <li><button type="button" class="no-btn button" id="character-rotate">Rotate</button></li>
        <li><button type="button" class="no-btn button button--warning" id="character-remove">Remove</button></li>
    </ul>
    {% endblock %}
{% endembed %}

{% embed '../includes/dialog.twig' with {
    id: 'bluff-show',
    background: 'hide'
} %}
    {% block title %}<span id="bluff-show-name" data-no-character="Empty">Token</span>{% endblock %}
    {% block body %}
    <div>
        <button id="bluff-show-token" class="no-btn character-show__token" data-dialog="#bluff-list"></button>
    </div>
    {# <div id="bluff-show-token" class="character-show__token"></div> #}
    <p id="bluff-show-ability" class="character-show__ability"></p>
    <button type="button" class="no-btn button" data-dialog="#bluff-list">Change token</button>
    {% endblock %}
{% endembed %}

{% embed '../includes/dialog.twig' with {
    id: 'bluff-list',
    background: 'blur',
    title: 'Select Bluff'
} %}
    {% block body %}
    <ul id="character-list__bluffs" class="button-list button-list--reminder character-list mb-4"></ul>

    <ul class="no-list">
        <li>
            {{ forms.toggle({
                name: 'show',
                id: 'show-existing',
                value: 'existing'
            }) }}
            <label for="show-existing">Show existing characters</label>
        </li>
        <li>
            {{ forms.toggle({
                name: 'show',
                id: 'show-travellers',
                value: 'traveller'
            }) }}
            <label for="show-travellers">Show travellers</label>
        </li>
        <li>
            {{ forms.toggle({
                name: 'show',
                id: 'show-evil',
                value: 'evil'
            }) }}
            <label for="show-evil">Show evil characters</label>
        </li>
    </ul>

    {% endblock %}
{% endembed %}
