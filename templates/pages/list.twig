{% extends "../base.twig" %}

{% block title %}Character List{% endblock %}

{% set body_class = 'body-list' %}

{% block body %}
<!-- TODO -->
{#
<h1 class="sr-only">All the character roles that may appear in the game</h1>

<table id="table" class="edition">
    <caption class="sr-only">The list of character roles for this edition of Blood on the Clocktower.</caption>
    <thead class="sr-only">
        <tr>
            <th scope="col">Role</th>
            <th scope="col">Ability</th>
        </tr>
    </thead>
    <tbody class="edition__team" id="team-townsfolk">
        <tr>
            <th scope="col" colspan="2" class="edition__title">
                <h2 class="edition__heading"><button type="button" aria-controls="team-townsfolk" aria-expanded="true" class="no-btn edition__heading-text">Townsfolk</button></h2>
            </th>
        </tr>
    </tbody>
    <tbody class="edition__team" id="team-outsider">
        <tr>
            <th scope="col" colspan="2" class="edition__title">
                <h2 class="edition__heading"><button type="button" aria-controls="team-outsider" aria-expanded="true" class="no-btn edition__heading-text">Outsiders</button></h2>
            </th>
        </tr>
    </tbody>
    <tbody class="edition__team" id="team-minion">
        <tr>
            <th scope="col" colspan="2" class="edition__title">
                <h2 class="edition__heading"><button type="button" aria-controls="team-minion" aria-expanded="true" class="no-btn edition__heading-text">Minions</button></h2>
            </th>
        </tr>
    </tbody>
    <tbody class="edition__team" id="team-demon">
        <tr>
            <th scope="col" colspan="2" class="edition__title">
                <h2 class="edition__heading"><button type="button" aria-controls="team-demon" aria-expanded="true" class="no-btn edition__heading-text">Demons</button></h2>
            </th>
        </tr>
    </tbody>
    <tbody class="edition__team" id="team-traveler" hidden>
        <tr>
            <th scope="col" colspan="2" class="edition__title">
                <h2 class="edition__heading"><button type="button" aria-controls="team-traveler" aria-expanded="false" class="no-btn edition__heading-text">Travellers</button></h2>
            </th>
        </tr>
    </tbody>
</table>

<p>
    <button type="button" data-target="#qr-code" class="action">
        <!-- SVG from FontAwesome https://fontawesome.com/v5.15/icons/qrcode?style=solid -->
