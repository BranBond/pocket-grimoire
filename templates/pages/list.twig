{% extends "../base.twig" %}

{% block title %}Character List{% endblock %}

{% block styles %}
<link rel="stylesheet" href="./assets/css/list.css">
{% endblock %}

{% block body %}

<h1 id="title" class="edition-title"></h1>

{% for type, text in {
    townsfolk: 'Townsfolk',
    outsider: 'Outsiders',
    minion: 'Minions',
    demon: 'Demons',
    travellers: 'Travellers'
} %}
    {% embed '../includes/details.twig' with {
        open: type != 'travellers',
        class: 'edition'
    } %}
        {% block summary %}
        <span class="edition__heading-text">{{ text }}</span>
        {% endblock %}
        {% block body %}
        <div id="team-{{ type }}" class="edition__team"></div>
        {% endblock %}
    {% endembed %}
{% endfor %}

<template id="edition-template">
    <div class="edition__role">
        <p class="edition__name js--edition--name"></p>
        <div class="edition__icon">
            <img src="" alt="" class="edition__image js--edition--image" aria-hidden="true">
        </div>
        <div class="edition__ability js--edition--ability"></div>
    </div>
</template>

<p><small>* Each night except the first night.</small></p>
<p>
    <button type="button" class="action action--blue" data-dialog="#qr-code-dialog"><!-- SVG from Font Awesome https://fontawesome.com/v5.15/icons/qrcode?style=solid --><svg aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="action__icon"><path fill="currentColor" d="M0 224h192V32H0v192zM64 96h64v64H64V96zm192-64v192h192V32H256zm128 128h-64V96h64v64zM0 480h192V288H0v192zm64-128h64v64H64v-64zm352-64h32v128h-96v-32h-32v96h-64V288h96v32h64v-32zm0 160h32v32h-32v-32zm-64 0h32v32h-32v-32z" class=""></path></svg><span>Get the QR code for this list</span></button></p>
<p><small><a href="https://bloodontheclocktower.com/" target="_blank" rel="noopener noreferrer">Blood on the Clocktower</a> is a trademark of Steven Medway and <a href="https://www.thepandemoniuminstitute.com/" target="_blank" rel="noopener noreferrer">The Pandemonium Institute</a>.</small></p>

{% embed '../includes/dialog.twig' with {
    id: 'qr-code-dialog',
    background: 'blur',
    title: 'Get this list'
} %}
    {% block body %}
        <div id="qr-code"></div>
    {% endblock %}
{% endembed %}

{% endblock %}

{% block javascript %}
<script src="./assets/js/list.js"></script>
{% endblock %}
